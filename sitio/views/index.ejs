        <!------ 3 COLUMNAS DE TARJETAS------>
        <div class="columnas">
          <div class="container ">
          <div class="row">
            <div class="col-12 col-lg-4">
              <h4>Ofertas</h4>
              <% ofertas.forEach(oferta => { %>
               <div class="card efectoBox">
                <div class="row no-gutters efectoBoxH">
                  <div class="col-5 col-md-2 col-lg-5">
                    <figure class="d-flex justify-content-center d-flex align-items-center">
                      <a href="/productos/detalleProducto/<%= oferta.id %> ">
                        <img src="images/imagenProducto/<%- oferta.imagen %> " class="card-img" alt="">
                      </a>
                    </figure>
                  </div>
                  <div class="col-7 col-md-10 col-lg-7 tarjetaContenido">
                    <h5 class="card-title"><%- oferta.nombre %> </h5>
                    <p>$<%- (oferta.precio - oferta.precio * oferta.descuento / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></p>
                    <% if (oferta.descuento != 0) { %>
                      <span><%- oferta.descuento %>% OFF</span>
                    <% } %>          
                  </div>
                </div>
              </div>
              <% }) %>
            </div><!--tarjeta izquierda-->
            <div class="col-12 col-lg-4">
              <h4>Mejores Productos</h4>
              <% mejorProducto.forEach(producto => { %>
               <div class="card efectoBox">
                <div class="row no-gutters efectoBoxH">
                  <div class="col-5 col-md-2 col-lg-5">
                    <figure class="d-flex justify-content-center d-flex align-items-center">
                      <a href="/productos/detalleProducto/<%= producto.id %>">
                        <img src="images/imagenProducto/<%- producto.imagen %> " class="card-img" alt="">
                      </a>
                    </figure>
                  </div>
                  <div class="col-7 col-md-10 col-lg-7 tarjetaContenido">
                    <h5 class="card-title"><%- producto.nombre %> </h5>
                    <p style="margin:0;">$<%- (producto.precio - producto.precio * producto.descuento / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></p>
                  </div>
                </div>
              </div>
              <% }) %>
            </div><!--tarjeta medio-->
            <div class="col-12 col-lg-4">
              <h4>Mas Vendidos</h4>
              <% masVendido.forEach(producto => { %>
               <div class="card efectoBox">
                <div class="row no-gutters efectoBoxH">
                  <div class="col-5 col-md-2 col-lg-5">
                    <figure class="d-flex justify-content-center d-flex align-items-center">
                      <a href="/productos/detalleProducto/<%= producto.id %>">
                        <img src="images/imagenProducto/<%- producto.imagen %> " class="card-img" alt="">
                      </a>
                    </figure>
                  </div>
                  <div class="col-7 col-md-10 col-lg-7 tarjetaContenido">
                    <h5 class="card-title"><%- producto.nombre %> </h5>
