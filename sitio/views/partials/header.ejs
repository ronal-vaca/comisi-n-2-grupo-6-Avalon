<header style="background-color: #ececec;">
  <div class="container">
    <div class="row cajaHeader">
      <div class="col-3 col-lg-8 order-lg-2">
        <nav class="navbar navbar-expand-lg">
          <button class="navbar-toggler botonMnu" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><i class="fas fa-bars"></i></button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
              <li class="nav-item"><a href="">ARMA TU PC</a></li>
              <li class="nav-item"><a href="">PC ARMADAS</a></li>
              <% if (typeof user == "undefined") { %>
                <li class="nav-item"><a href="/productos" href="#">PRODUCTOS</a></li>
              <% }else{ %>
                <li class="nav-item"><a href="/productos/admn" href="#">PRODUCTOS</a></li>
              <% } %>
              
              <li class="nav-item"><a href="">NOTEBOOKS</a></li>
              <li class="nav-item"><a href="/productos/monitor">MONITORES</a></li>
            </ul>
          </div>
        </nav>  
      </div><!--botones de navegacion-->
      <div class="col-5 col-lg-2 order-lg-1 cajaLogo">
        <a href="/"><h4>AVALON</h4></a>
      </div><!--logo-->
      <div class="col-4 col-lg-2 order-lg-3 cajaIconos">
        <% if (typeof user == "undefined") { %>
          <div class="dropdown m">
            <span><%= (user)?user.nick:"" %></span><a href="" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user"></i></a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="/users/iniciarsesion">Iniciar sesion</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/users/registro">Registrarse</a>
            </div>
          </div>
          <div class="dropdown m">
            <a href="" type="button"  id="dropdownMenuButton1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-shopping-cart"></i></a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton1">
              <a class="dropdown-item" href="/productos/carrito">Ir al carrito</a>
            </div>
          </div>
        <% }else{ %>
          <div class="dropdown m">
            <span class="nombreUsuario"><%= (user)?user.nick:"Invitado" %></span><a href="" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user" style="color:green;"></i></a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <div class="d-flex justify-content-center">
              <img width="50px" height="50px" style="border-radius:50%; object-fit: cover; object-position: top;" src="/images/imagenAvatar/<%= user.avatar %> " alt="">
              </div>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/users/perfil">Perfil</a>
              <a class="dropdown-item" href="/users/cerrarsesion">Cerrar Sesion</a>
            </div>
          </div>
          <div class="dropdown m">
            <a href="" type="button"  id="dropdownMenuButton1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-shopping-cart"></i></a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton1">
              <a class="dropdown-item" href="/productos/carrito">Ir al carrito</a>
              
              <% if (user.rol == "admin") { %>
                <a class="dropdown-item" href="/productos/cargaProducto">Agregrar un producto</a>
              <% } %>
            </div>
          </div>
        <% } %>
        
      </div><!--iconos usuario carrito-->
    </div>
    <div class="row">
      <div class="col-12">
        <form action="/productos/buscar" class="cajaBuscador">
          <input type="text"  name="buscar" placeholder="Buscar productos, marcas y mÃ¡s">
          <button type="submit"><i class="fas fa-search"></i></button>
        </form>
      </div>
    </div><!--buscador-->
  </div>
  <div id="rgbar" style="box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.3)"></div>
</header>